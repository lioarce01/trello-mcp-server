{
  "name": "trello-mcp-http-server",
  "version": "1.0.0",
  "description": "Trello MCP Server with HTTP support",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx ./index.ts",
    "docker:build": "docker build -t trello-mcp-server .",
    "docker:run": "docker run -p 3001:3001 -e TRELLO_API_KEY=${TRELLO_API_KEY} -e TRELLO_TOKEN=${TRELLO_TOKEN} trello-mcp-server"
  },
  "keywords": ["mcp", "trello", "http", "server"],
  "author": "Lionel Arce",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "express": "^4.18.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}